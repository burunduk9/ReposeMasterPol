<Page x:Class="AtendaanceProject.PageApp.TeacherMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtendaanceProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Margin="5" x:Name="btnShowAtendanceList" Content="show atendance list" Click="btnShowAtendanceList_Click"/>
            <Button Margin="5" x:Name="btnLeave" Content="Leave" Click="btnLeave_Click"/>
        </StackPanel>
        <Frame x:Name="MainFrameTeacher" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
