<Page x:Class="AtendaanceProject.PageApp.AdminGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtendaanceProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminGroupPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--vmvmvmvmvmvmvmvmvmvmv-->
        <StackPanel>
            <Label Content="search"/>
            <TextBox x:Name="txtsearchik" TextChanged="txtsearchik_TextChanged"/>
            <Label Content="filter"/>
            <ComboBox x:Name="CBfilterSpeciality" ItemsSource="{Binding Specialitys}" SelectionChanged="CBfilterSpeciality_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding title}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="btnAddGroup" Content="add group" Click="btnAddGroup_Click"/>
            <Button x:Name="btnRefresh" Content="refresh" Click="btnRefresh_Click"/>
        </StackPanel>
        <!--vmvmvmvmvmvmvmvmvmvmv-->
        <StackPanel Grid.Column="1">
            <ScrollViewer MinHeight="600">
                <ListView x:Name="ListGroup" ItemsSource="{Binding Groups}">
                    <ListView.View>
                        <GridView>
                            <!--vmvmvmvmvmvmvmvmvmvmv-->
                            <GridViewColumn Header="название" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding title}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="курс" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding course}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="специальность" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Speciality.title}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--vmvmvmvmvmvmvmvmvmvmv-->
                            <GridViewColumn Header="support buttons" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="btnEdit" Content="edit" Click="btnEdit_Click"/>
                                            <Button x:Name="btnDelete" Content="delete" Click="btnDelete_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--vmvmvmvmvmvmvmvmvmvmv-->
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
