<Page x:Class="AtendaanceProject.PageApp.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtendaanceProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Margin="5" x:Name="btnUser" Content="user" Click="btnUser_Click"/>
            <Button Margin="5" x:Name="btnStudent" Content="student" Click="btnStudent_Click"/>
            <Button Margin="5" x:Name="btnSpeciality" Content="speciality" Click="btnSpeciality_Click"/>
            <Button Margin="5" x:Name="btnGroup" Content="group" Click="btnGroup_Click"/>
            <Button Margin="5" x:Name="btnSubject" Content="subject" Click="btnSubject_Click"/>
            <!--<Button Margin="5" x:Name="btnOtchet" Content="Otchet" Click="btnOtchet_Click"/>-->
            <Button Margin="5" x:Name="btnLeave" Content="Leave" Click="btnLeave_Click"/>
        </StackPanel>
        <Frame x:Name="MainFrameAdmin" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
