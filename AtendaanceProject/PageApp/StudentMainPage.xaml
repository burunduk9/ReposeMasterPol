<Page x:Class="AtendaanceProject.PageApp.StudentMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtendaanceProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Margin="5" x:Name="btnShowAtendance" Content="посещаемость" Click="btnShowAtendance_Click"/>
            <Button Margin="5" x:Name="btnShowSchedule" Content="расписание" Click="btnShowSchedule_Click"/>
            <Button Margin="5" x:Name="btnLeave" Content="выйти" Click="btnLeave_Click"/>
        </StackPanel>
        <Frame x:Name="MainFrameStudent" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
