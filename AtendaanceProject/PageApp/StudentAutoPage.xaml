<Page x:Class="AtendaanceProject.PageApp.StudentAutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtendaanceProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentAutoPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Авторизация" Grid.Column="1" FontSize="24"/>

        <StackPanel VerticalAlignment="Center" Grid.Column="1">
            <Label Content="фамилия"/>
            <TextBox x:Name="txtSurname"/>
            <Label Content="имя"/>
            <TextBox x:Name="txtName"/>
            <Label Content="отчество"/>
            <TextBox x:Name="txtPatronymic"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnAuto" Content="авторизоваться" Click="btnAuto_Click"  Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
